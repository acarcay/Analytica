rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profil fotoğrafları: kullanıcılar sadece kendi uid dizinine yükleyebilsin
    match /profile_photos/{userId}.jpg {
      allow read: if true; // profil fotoğrafları herkese açık olabilir
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Diğer tüm yüklemeler için yalnızca doğrulanmış kullanıcı izinli olsun; admin tarafından kontrol edilmeli
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
